<%= form_with model: [post, comment], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |form| %>
  <%= form_error_notification(comment) %>

  <%= form.label :content, "Content", class: "hidden" %>
  <%= form.text_area :content %>
  <%= link_to "Cancel", posts_path, class: "btn btn--light" %>
  <%= form.submit "Comment", class: "btn btn--secondary" %>
<% end %>
